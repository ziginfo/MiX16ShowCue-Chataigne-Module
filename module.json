{
	"name": "MiX16 ShowCue",
	"type": "OSC",
	"path": "Software",
	
	"version":"1.1",
  "description":"Allow you to control MiX16 ShowCue with chataigne",
  "url":"https://github.com/ziginfo/MiX16ShowCue-Chataigne-Module",
  "downloadURL":"https://github.com/ziginfo/MiX16ShowCue-Chataigne-Module/archive/refs/heads/main.zip",
  
	
	"hasInput": true,
	"hasOutput": true, 

	"hideDefaultCommands": false,
	"hideDefaultParameters": [
		"colorSendMode",
		"autoRange",
		"autoFeedback",
		"pass_through",
		"input",
		"outputs",
		"useHierarchy",
		"colorSendMode",
		"booleanSendMode",
		"listenToFeedback",
		"autoAdd" ],
	
	"defaults": {
	
		"OSC Input": {
			"localPort" : 7201 },
			
		"OSC Outputs": {
			"OSC Output": {
				"local" : false,
				"remoteHost" : "192.168.50.90",
				"remotePort"  : 7200,
				"listenToFeedback":false } }
	},
	
	"parameters": {
	
			"ShowCue Version": {
				"type":"String",
				"readOnly": true ,
				"default":"ShowCue Version"	},
			"Session Name": {
				"type":"String",
				"readOnly" : true , 
				"default":"Session Name",
				"description":"Shows the Session  Name"  },
			"Count of Cues": {
				"type":"Integer",
				"readOnly": true,
				"description":"Number of Cues" },
			"Sync": {
				"type":"Trigger",
				"description":"Sync Infos" }
				
			
	},
	
	"scripts": ["mix16sc.js"],
	
	"values": {
			"Playing Time": {
				"type":"String",
				"readOnly": true },
			"Playing Cue No": {
				"type":"Integer",
				"readOnly": true,
				"description":"Shows the Active Cue Number",
				"default":"Active Cue No"  },
			"Playing Cue": {
				"type":"String",
				"description":"Shows the Active Cue Name",
				"default":"Active Cue"  },
			"Next Cue": {
				"type":"String",
				"description":"Shows the Next Cue Name",
				"default":"Next Cue"  },
			"Next Cue No": {
				"type":"String",
				"description":"Shows the Next Cue Number",
				"default":"Next Cue No"  },
			"GO": {
				"type":"Trigger",
				"description":"Go Next Cue" },
			"Stop All": {
				"type":"Trigger",
				"description":"Stopp All Playing Cues" },
				
			"Cue Names": {
				"type":"Container",
				"collapsed": true,
			"Advice": {
				"type":"String",
				"default":"If no Cues showing, please Sync the Cue Name List.",
				"readOnly": true },
			"Sync Cue Names": {
				"type":"Trigger",
				"description":"Syncing Cue Names",
				"default": false },
			"Count of Cues": {
				"type":"Integer",
				"description":"Count of Cues",
				"default": 0 },
			"Test": {
				"type":"String",
				"default":"Test"}	
				 },
				
			
			"Cue Infos": {
				"type":"Container",
				"collapsed": true ,
			"  ": {
				"type":"String",
				"description":"Set the Cue N° and hit Enter !" ,
				"default":"Set the Cue N° and hit Enter !" ,
				"readOnly": true  },
			"Cue Number": {
				"type":"String",
				"description":"Set the Cue Number",
				"default":"Set the Cue Number" } ,
			"Cue Name": {
				"type":"String",
				"description":"Shows the Selected Cue Name",
				"default":"Cue Name" },
			"Cue Status": {
				"type":"String",
				"description":"Is Playing or Stopped",
				"readOnly" : true },
			"Cue Volume": {
				"type":"Float",
				"description":"Cue Volume",
				"readOnly" : true },
			"Notes": {
				"type":"String",
				"multiline" : true,
				"readOnly" : true ,
				"description":"Shows the Notes of the Selected Cue",
				"default":"Shows the Notes of the Selected Cue"},
			"Cue Color": {
				"type":"Color",
				"description":"Shows the Cue Color"  ,
				"readOnly" : true } 				
				}
	},
	
	"commands": {
	
	
	
		
	"Go" : {
			"menu" : "Main Control",
			"callback" : "go"
		},	
		
	"Set Prev" : {
			"menu" : "Main Control",
			"callback" : "back"
		},
		
	"Set Next" : {
			"menu" : "Main Control",
			"callback" : "next"
		},
		
	"Pause Playlist" : {
			"menu" : "Main Control",
			"callback" : "pause_play"
		},			
		
	"Stop All" : {
			"menu" : "Main Control",
			"callback" : "stop_all"
		},		
				
	"Set Next Cue" : {
			"menu" : "Main Control",
			"callback" : "set_next",
			"parameters" : {
			
			" GoTo Cue": {
					"type": "Integer",
					"default": 1, 
					"min":0,
					"max":100,
					"useForMapping": true }	
		}  },
		
		"Play Next Cue" : {
			"menu" : "Main Control",
			"callback" : "play_cue",
			"parameters" : {
			
			" GoTo Cue": {
					"type": "Integer",
					"default": 1, 
					"min":0,
					"max":100,
					"useForMapping": true }	
		}  },
		
		"Set & Play Cue" : {
			"menu" : "Main Control",
			"callback" : "set_play",
			"parameters" : {
			
			" GoTo Cue": {
					"type": "Integer",
					"default": 1, 
					"min":0,
					"max":100,
					"useForMapping": true }	
		}  },	
				
		"Reset Playlist" : {
			"menu" : "Main Control",
			"callback" : "reset"
		},
		
		"Set Cue Volume" : {
			"menu" : "Volume",
			"callback" : "cueVol",
			"parameters" : {
			
				"Cue": {
					"type": "Integer",
					"default": 1, 
					"min":0,
					"max":100,
					"useForMapping": true },
					
				"Volume": {
					"type": "Float",
					"default": 100, 
					"min":0,
					"max":100,
					"useForMapping": true } 
			}  },	
	
		
		"Set Master Volumes" : {
			"menu" : "Volume",
			"callback" : "masterVol",
			"parameters" : {
				
				"Volume": {
					"type": "Float",
					"default": 100, 
					"min":0,
					"max":100,
					"useForMapping": true } 
			}  },
					
				
		
		"Set Lighting Master" : {
			"menu" : "Actions",
			"callback" : "light_master",
			"parameters" : {
				"Value": {
					"type": "Float",
					"default": 100, 
					"min":0,
					"max":100,
					"useForMapping": true }
		}  },
			
		"Basic Request" : {
			"menu" : "OSC Request",
			"callback" : "basicinfo"
		},			
		
		"Full Request" : {
			"menu" : "OSC Request",
			"callback" : "fullinfo"
		}

	
	}
}
